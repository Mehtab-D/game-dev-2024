<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interactive World Map</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #f3f3f3;
    }
    .map-container {
      width: 80vw;
      height: auto;
      position: relative;
    }
    #tooltip {
      position: absolute;
      background-color: rgba(0, 0, 0, 0.7);
      color: #fff;
      padding: 5px 10px;
      border-radius: 4px;
      display: none;
      pointer-events: none;
      font-size: 1em;
    }
    svg path {
      cursor: pointer;
      fill: #b3cde0;
      stroke: #fff;
      stroke-width: 0.5;
      transition: fill 0.3s;
    }
    svg path:hover {
      fill: #6497b1;
    }
  </style>
</head>
<body>

<div class="map-container">
  <div id="tooltip"></div>
  
  <!-- SVG Map of the World (simplified for demo) -->
  <svg viewBox="0 0 1000 500" id="worldMap">
    <!-- Example countries (use a full SVG map for a complete experience) -->
    <path id="US" data-name="United States" d="M130,150 L150,150 L150,170 L130,170 Z"></path>
    <path id="CA" data-name="Canada" d="M130,120 L150,120 L150,140 L130,140 Z"></path>
    <path id="MX" data-name="Mexico" d="M130,180 L150,180 L150,200 L130,200 Z"></path>
    <!-- Add more countries with their respective paths -->
  </svg>
</div>

<script>
  const tooltip = document.getElementById('tooltip');
  const map = document.getElementById('worldMap');

  // Show tooltip on hover
  map.addEventListener('mousemove', (e) => {
    if (e.target.tagName === 'path') {
      const countryName = e.target.getAttribute('data-name');
      tooltip.style.display = 'block';
      tooltip.textContent = countryName;
      tooltip.style.left = e.pageX + 10 + 'px';
      tooltip.style.top = e.pageY + 10 + 'px';
    }
  });

  // Hide tooltip when not hovering on a country
  map.addEventListener('mouseout', (e) => {
    if (e.target.tagName === 'path') {
      tooltip.style.display = 'none';
    }
  });

  // Click event to log the country name
  map.addEventListener('click', (e) => {
    if (e.target.tagName === 'path') {
      const countryName = e.target.getAttribute('data-name');
      alert(`You clicked on: ${countryName}`);
    }
  });
</script>

</body>
</html>

